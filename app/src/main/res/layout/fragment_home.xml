<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/white">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="search designer"></SearchView>


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="27dp"
                        android:layout_height="37dp"
                        android:layout_centerVertical="true"
                        android:background="#DCDCDC"
                        android:src="@drawable/dp" />

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/profile_image"
                        android:layout_toRightOf="@+id/profile_image"
                        android:fontFamily="casual"
                        android:includeFontPadding="false"
                        android:text="Mubashrameer123"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:onClick="viewprofile"
                        android:id="@+id/view_hire"
                        android:layout_width="wrap_content"
                        android:layout_height="37sp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/round_button"
                        android:text="viewprofile"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:backgroundTint="#F733BACC" />
                </LinearLayout>

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"

                    android:src="@drawable/pic">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/profile_image"
                        android:layout_toRightOf="@+id/profile_image"
                        android:fontFamily="casual"
                        android:includeFontPadding="false"
                        android:text="lounge decored in islamabad."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginLeft="65dp"
                        android:background="#DCDCDC"
                        android:src="@drawable/ic_baseline_thumb_up_24" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/dp2"
                        android:layout_width="27dp"
                        android:layout_height="37dp"
                        android:layout_centerVertical="true"
                        android:background="#DCDCDC"
                        android:src="@drawable/caption_pic" />

                    <TextView
                        android:id="@+id/profile_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/profile_image"
                        android:layout_toRightOf="@+id/profile_image"
                        android:fontFamily="casual"
                        android:includeFontPadding="false"
                        android:text="@string/sadia_malik"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/view_hire2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:background="@drawable/round_button"
                        android:text="viewprofile"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:backgroundTint="#F733BACC" />
                </LinearLayout>

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"

                    android:src="@drawable/back">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/caption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                       android:fontFamily="casual"
                        android:includeFontPadding="false"
                        android:text="lounge decored in islamabad."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/like2"
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginLeft="65dp"
                        android:background="#DCDCDC"
                        android:src="@drawable/ic_baseline_thumb_up_24" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/dp3"
                        android:layout_width="27dp"
                        android:layout_height="37dp"
                        android:layout_centerVertical="true"
                        android:background="#DCDCDC"
                        android:src="@drawable/caption_pic" />

                    <TextView
                        android:id="@+id/profile_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/profile_image"
                        android:layout_toRightOf="@+id/profile_image"
                        android:fontFamily="casual"
                        android:includeFontPadding="false"
                        android:text="@string/sadia_malik"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/view_hire3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"

                        android:background="@drawable/round_button"
                        android:text="viewprofile"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:backgroundTint="#F733BACC" />
                </LinearLayout>

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"

                    android:src="@drawable/back">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/caption3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="casual"
                        android:includeFontPadding="false"
                        android:text="lounge decored in islamabad."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/like3"
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginLeft="65dp"
                        android:background="#DCDCDC"
                        android:src="@drawable/ic_baseline_thumb_up_24" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
</RelativeLayout>